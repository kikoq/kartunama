<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2ecc71"
    android:orientation="vertical"
    tools:context="com.kikoqonxz.kartunama.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="M Rizki Amrullah S.Kom"
        android:textSize="25sp"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:id="@+id/text_1"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingRight="10dp"
        android:text="MANAGER"
        android:textSize="17sp"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:id="@+id/text_2"
        android:layout_below="@id/text_1"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="right"
        android:paddingRight="10dp"
        android:textSize="17sp"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:id="@+id/spasi"
        android:layout_below="@id/text_2"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="PT. Android Development"
        android:textSize="20sp"
        android:fontFamily="serif"
        android:textColor="#e74c3c"
        android:textStyle="bold"
        android:id="@+id/text_3"
        android:layout_below="@id/spasi"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:cropToPadding="true"
        app:srcCompat="@mipmap/ic_launcher_round"
        android:layout_below="@id/text_3"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingTop="50dp"
        android:paddingLeft="10dp"
        android:text="Jl. Taman Siswa Km 02"
        android:textSize="18sp"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:id="@+id/alamat"
        android:layout_below="@id/imageView"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:text="amrizakisi@gmail.com"
        android:textSize="18sp"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:id="@+id/email"
        android:layout_below="@id/alamat"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:text="085-255-888-999"
        android:textSize="18sp"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:id="@+id/telepon"
        android:layout_below="@id/email"
        />

</RelativeLayout>
